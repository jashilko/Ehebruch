@model Ehebruch.Models.Account.LogViewModel
 
@{
    Layout = "~/Views/Shared/_LayoutBoot3.cshtml";
}

<div class="row">
    <div class="col-md-6 col-md-offset-3">
    @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <h4>Войдите или зарегистрируйтесь</h4>
    <hr />
    @Html.ValidationSummary()
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label text-left" })
        <div class="col-md-6 col-md-offset-1">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label text-left"  })
        <div class="col-md-6 col-md-offset-1">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.RememberMe, new { @class = "col-md-2 control-label text-left" })
        <div class="col-md-6 col-md-offset-1 vcenter">
            @Html.CheckBoxFor(m => m.RememberMe)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-6 col-md-offset-3 vcenter">
            <input type="submit" class="btn btn-default col-md-4 vcenter" value="Войти"/>
            @Html.ActionLink("Забыли пароль?", "Index", new object { }, new { @class = "control-label col-md-offset-1 vcenter"})

        </div>
    </div>
}  
 @using (Html.BeginForm("Register", "Account", FormMethod.Get, new { @class = "form-horizontal", role = "form" }))
 {
    <div class="form-group">
        <div class="col-md-6 col-md-offset-3 vcenter">
            <input type="submit" class="btn btn-default col-md-12" value="Зарегистрироваться"/>
        </div>
    </div>
 }

